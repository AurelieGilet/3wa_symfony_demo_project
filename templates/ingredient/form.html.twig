{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/admin/admin.css') }}">
    <link rel="stylesheet" href="{{ asset('css/admin/form.css') }}">
{% endblock %}

{% set current_path = app.request.get('_route') %}

{% block title %}
    {% if current_path is same as 'ingredient_add' %}
        Ajouter 
    {% else %}
        Modifier 
    {% endif %}
        un ingrédient
{% endblock %}

{% block body %}
<main class="admin">
    <a href="{{ path('admin') }}" class="link-back">Espace admin</a>
    <h1>
        {% if current_path is same as 'ingredient_add' %}
            Ajouter 
        {% else %}
            Modifier 
        {% endif %}
            un ingrédient
    </h1>
    <div class="form">
        {{ form(form) }}
    </div>
</main>
{% endblock %}
